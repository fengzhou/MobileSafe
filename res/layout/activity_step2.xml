<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:itheima="http://schemas.android.com/apk/res/com.example.MobileSafe"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:background="#8899ff00"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="2.手机卡绑定"
            android:layout_width="fill_parent"
            android:layout_height="55dip"/>
    <TextView
            android:text="通过绑定SIM卡："
            style="@style/text_content_style"/>
    <TextView
            android:text="下次重启手机如果发现sim卡变化\n就会发送报警短信"
            style="@style/text_content_style"/>
    <com.example.ui.SettingItemView
            itheima:title="点击绑定sim卡"
            itheima:desc_on="sim卡已经绑定"
            itheima:desc_off="sim卡没有绑定"
            android:id="@+id/bingsim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.example.ui.SettingItemView>

    <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@android:drawable/presence_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@android:drawable/presence_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@android:drawable/presence_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:src="@android:drawable/presence_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                style="@style/button_pre_style"/>
        <Button
               style="@style/button_next_style"/>

    </RelativeLayout>

</LinearLayout>