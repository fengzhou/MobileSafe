<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"

              android:layout_height="match_parent">
    <TextView
            android:background="#8899ff00"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="手机防盗"
            android:layout_width="fill_parent"
            android:layout_height="55dip"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="安全号码"
                android:textSize="20sp"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/safenumber"
                android:layout_alignParentRight="true"
                android:text="安全号码"
                android:textSize="20sp"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_height="0.3dip"></View>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="防盗保护是否开启"
                android:textSize="20sp"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:layout_marginTop="8dip"
                android:src="@drawable/unlock"
                android:textColor="#000000"
                android:textSize="20sp" />
    </RelativeLayout>
    <View
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_height="0.3dip"></View>

    <TextView
            android:clickable="true"
            android:onClick="reEnterSetup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="重新进入设置向导"
            android:textSize="20sp" />
    <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:layout_marginTop="5dip"
            android:background="#ffffff" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="功能简介"
            android:textSize="20sp" />
    <TextView
            style="@style/text_content_style"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="GPS追踪:#*location*#" />

    <TextView
            style="@style/text_content_style"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="播放报警音乐：#*alarm*#" />


    <TextView
            style="@style/text_content_style"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="远程数据销毁:#*wipedata*#" />

    <TextView
            style="@style/text_content_style"
            android:drawableLeft="@android:drawable/star_big_on"
            android:text="远程锁屏:#*lockscreen*#" />


</LinearLayout>